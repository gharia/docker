FROM alpine:edge

# Install Build Dependencies
RUN apk add --no-cache --repository http://dl-cdn.alpinelinux.org/alpine/edge/main openssl && \
  apk add --no-cache --repository http://dl-cdn.alpinelinux.org/alpine/edge/testing gdal-dev && \
  apk add --no-cache \
  coreutils \
  doxygen \
  libmicrohttpd-dev \
  libressl-dev \
  jansson-dev \
  openssl-dev \
  libsrtp-dev \
  libcurl \
  glib-dev \
  opus-dev \
  libogg-dev \
  libconfig-dev \
  pkgconf \
  gengetopt \
  libtool \
  autoconf \
  automake \
  cmake \
  libnice-dev \
  lksctp-tools-dev \
  git \
  gcc \
  make \
  g++ \
  gtk-doc \
  util-linux-dev \
  zlib-dev


#Install libnice
RUN cd / \
    && git clone https://gitlab.freedesktop.org/libnice/libnice \
    && cd libnice \
    && git checkout 0.1.16 \ 
    && ./autogen.sh \
    && ./configure --prefix=/usr \
    && make \
    && make install \
# Install libsrtp
    && cd / \
    && git clone https://github.com/cisco/libsrtp.git \
    && cd libsrtp \
    && git checkout v2.3.0 \
    && ./configure --prefix=/usr --enable-openssl \
    && make shared_library \
    && make install \
# Install usrsctp
    && cd / \
    && git clone https://github.com/sctplab/usrsctp \
    && cd usrsctp \
    && git checkout 0.9.3.0 \
    && ./bootstrap \
    && ./configure --disable-warnings-as-errors --prefix=/usr \
    && make \
    && make install \
# Install libwebsockets
    && cd / \
    && git clone https://github.com/warmcat/libwebsockets.git \
    && cd libwebsockets \
    && git checkout v4.0.1 \
    && mkdir build \
    && cd build \
    && cmake -DCMAKE_INSTALL_PREFIX:PATH=/usr -DCMAKE_C_FLAGS="-fpic" -DLWS_MAX_SMP=1 -DLWS_IPV6="ON" .. \
    && make \
    && make install \
# Install Janus Gateway
    && cd / \
    && git clone https://github.com/meetecho/janus-gateway.git \
    && cd janus-gateway \
    && git checkout v0.9.2 \
    && sh autogen.sh \
    && ./configure --prefix=/opt/janus --disable-rabbitmq --disable-mqtt \
    && make \
    && make install \
    && make configs \
# Cleanup
    && cd / \
    && rm -rf /libsrtp \
    && rm -rf /usrsctp \
    && rm -rf /libwebsockets \
    && rm -rf /janus-gateway \
    && apk del make cmake automake gcc g++ gtk-doc autoconf libtool gengetopt

CMD /opt/janus/bin/janus
